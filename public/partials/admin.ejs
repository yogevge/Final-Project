<% layout('components/layout'); %>
<% if (query.error !== undefined) { %>
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong><%= query.error %></strong>
    </div>
<% } %>

<div class="adminContainer">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Create New Person</div>
                <div class="panel-body">
                    <form class="form-horizontal" action="/admin" method="post">
                        <div class="form-group">
                            <label for="inputPerson" class="col-sm-2 control-label">Person Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputPerson" name="personName" placeholder="Full Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Relationships</label>
                            <div class="col-sm-10 connections" id="create-connections">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Create New Person</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Modify Person</div>
                <div class="panel-body" id="modify">
                    <span>Find a person using the top search menu</span>
                    <form class="form-horizontal" action="/admin/modify" method="post" style="display: none;">
                        <div class="form-group">
                            <label for="inputPerson" class="col-sm-2 control-label">Person Name</label>
                            <div class="col-sm-10">
                                <p class="form-control-static inputName"></p>
                                <input type="hidden" class="name" name="name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Relationships</label>
                            <div class="col-sm-10 connections" id="modify-connections">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Modify Person</button>
                                <button id="removePerson" class="btn btn-alert">Remove Person</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/assets/js/admin.js"></script>